{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 900px;
        width: 100%;
        font: 18px/1.5 sans-serif;
        background-color: #f0f8ff; /* Couleur d'arrière-plan */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-family: 'Arial', sans-serif;
        font-size: 28px;
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 16px;
        text-align: left;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    table th, table td {
        padding: 15px;
        border-bottom: 1px solid #ddd;
        text-align: center;
    }

    table th {
        background-color: #4CAF50;
        color: white;
        cursor: pointer; /* Ajout du curseur pour le tri */
    }

    table tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    table tr:hover {
        background-color: #ddd;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button {
        color: #4CAF50 !important;
        background-color: transparent;
        border: none;
        padding: 5px 10px;
        margin: 0 5px;
        cursor: pointer;
        font-size: 14px;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
        background-color: #4CAF50;
        color: white !important;
    }

    .dataTables_filter input {
        padding: 8px;
        margin-left: 5px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }
</style>

<div class="example-wrapper">
    <h1>Bienvenue sur ta page personnelle</h1>

    <!-- Tableau des logs de l'utilisateur -->
    <table id="logsTable" class="display">
        <thead>
            <tr>
                <th>ID</th>
                <th>URL</th>
                <th>Type d'Alerte</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {% for log in logs %}
                <tr>
                    <td>{{ log.id }}</td>
                    <td>{{ log.url }}</td>
                    <td>{{ log.warningType }}</td>
                    <td>{{ log.date|date('Y-m-d H:i:s') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun log trouvé pour cet utilisateur.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<!-- Scripts DataTables -->
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">

<script>
    $(document).ready(function() {
        $('#logsTable').DataTable({
            "paging": true,  // Activer la pagination
            "searching": true,  // Activer la recherche
            "ordering": true,  // Activer le tri
            "order": [[0, 'asc']],  // Activer le tri par défaut sur la première colonne (ID)
            "info": true,  // Afficher les infos sur les entrées
            "pageLength": 5,  // Nombre d'éléments par page
            "language": {
                "paginate": {
                    "previous": "Précédent",
                    "next": "Suivant"
                },
                "search": "Rechercher:",
                "lengthMenu": "Afficher _MENU_ entrées par page",
                "info": "Affichage de _START_ à _END_ sur _TOTAL_ entrées",
                "infoEmpty": "Aucune entrée disponible",
                "infoFiltered": "(filtré à partir de _MAX_ entrées au total)"
            }
        });
    });
</script>
{% endblock %}
