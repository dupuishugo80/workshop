{% extends 'base.html.twig' %}

{% block title %}Hello SignalementController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="h3 mb-3 font-weight-normal">Emettre un signalement</h1>
    {{ form_errors(threatForm) }}

    {{ form_start(threatForm) }}
        {{ form_row(threatForm.url) }}
        {{ form_row(threatForm.type) }}
        
        <button type="submit" class="btn">Soumettre</button>
    {{ form_end(threatForm) }}
</div>
{% endblock %}
